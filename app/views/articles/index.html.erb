<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= render :partial => 'form' %>

<div>
<%= will_paginate @articles, :renderer => BootstrapPagination::Rails %>
</div>

<% @articles.each do |article| %>

<div class="article_list well">

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= article.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= article.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= article.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= simple_format(auto_link_to(article.comment)) %></dd>
  <% if article.valid?  %>
  <dt><strong><%= model_class.human_attribute_name(:url) %>:</strong></dt>
  <dd><%= link_to(article.url,article.url,{:target=>"_blank"}) %></dd>
  <% end %>
  <% if article.photo.present? %>
  <dt><strong><%= model_class.human_attribute_name(:photo) %>:</strong></dt>
  <dd><%= image_tag(article.photo.url(:medium),:class=>"img-thumbnail") %></dd>
  <% end %>
</dl>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_article_path(article), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              article_path(article),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn-danger-more btn btn-danger' %>
</div>

<% end %>


<div>
<%= will_paginate @articles, :renderer => BootstrapPagination::Rails %>
</div>
